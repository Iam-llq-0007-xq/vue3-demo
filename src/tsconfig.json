{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    // "outDir": "../out-tsc/app",
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "~@/*": [
        "./*.scss",
        "./*.css",
        "./*.sass"
      ],
      "@components/*": [
        "./components/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "../src/**/*.vue",
    "../tests/**/*.ts",
    "../tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}